/**
 * @author v.lugovsky
 * created on 16.12.2015
 */
(function () {
  'use strict';

  angular.module('BlurAdmin.pages.tables', [])
    .config(routeConfig);

  /** @ngInject */
  function routeConfig($stateProvider, $urlRouterProvider) {
    $stateProvider
        .state('tables', {
          url: '/ftp',
          template : '<ui-view  autoscroll="true" autoscroll-body-top></ui-view>',
          abstract: true,
          controller: 'TablesPageCtrl',
          title: 'FTP',
          sidebarMeta: {
            icon: 'ion-grid',
            order: 300,
          },
        }).state('tables.smart', {
          url: '/domains',
          templateUrl: 'app/pages/tables/smart/tables.html',
          title: 'FTP Domains',
          sidebarMeta: {
            order: 100,
          },
        });
    $urlRouterProvider.when('/ftp','/ftp/domains');
  }

})();
